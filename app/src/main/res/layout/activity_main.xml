<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="16dp"
    android:gravity="bottom">

    <!-- Display/Input Area -->
    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center|end"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        android:paddingEnd="16dp"
        android:background="#1F1F1F"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp" />

    <!-- Buttons -->
    <GridLayout
        android:id="@+id/button_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="4dp">

        <!-- Row 1 -->
        <Button android:id="@+id/btnClear" style="@style/CalcButtonOperatorStyle" android:text="C"/>
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_columnSpan="2"/>
        <Button android:id="@+id/btndivide" style="@style/CalcButtonOperatorStyle" android:text="/"/>

        <!-- Row 2 -->
        <Button android:id="@+id/btn7" style="@style/CalcButtonStyle" android:text="7"/>
        <Button android:id="@+id/btn8" style="@style/CalcButtonStyle" android:text="8"/>
        <Button android:id="@+id/btn9" style="@style/CalcButtonStyle" android:text="9"/>
        <Button android:id="@+id/btnmultiply" style="@style/CalcButtonOperatorStyle" android:text="*"/>

        <!-- Row 3 -->
        <Button android:id="@+id/btn4" style="@style/CalcButtonStyle" android:text="4"/>
        <Button android:id="@+id/btn5" style="@style/CalcButtonStyle" android:text="5"/>
        <Button android:id="@+id/btn6" style="@style/CalcButtonStyle" android:text="6"/>
        <Button android:id="@+id/btnminus" style="@style/CalcButtonOperatorStyle" android:text="-"/>

        <!-- Row 4 -->
        <Button android:id="@+id/btn1" style="@style/CalcButtonStyle" android:text="1"/>
        <Button android:id="@+id/btn2" style="@style/CalcButtonStyle" android:text="2"/>
        <Button android:id="@+id/btn3" style="@style/CalcButtonStyle" android:text="3"/>
        <Button android:id="@+id/btnadd" style="@style/CalcButtonOperatorStyle" android:text="+"/>

        <!-- Row 5 -->
        <Button android:id="@+id/btn0" style="@style/CalcButtonStyle" android:text="0"/>
        <Button android:id="@+id/btndecimal" style="@style/CalcButtonStyle" android:text="."/>
        <View android:layout_width="0dp" android:layout_height="0dp"/>
        <Button android:id="@+id/btnequals" style="@style/CalcButtonEqualsStyle" android:text="="/>

    </GridLayout>
</LinearLayout>
