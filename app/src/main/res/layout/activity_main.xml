<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" tools:context=".MainActivity" android:gravity="bottom">


    <TextView android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_marginTop="32dp" android:gravity="center" android:hint="INPUT NUMBER" tools:ignore="HardcodedText" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="7"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btn8"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="8"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btn9"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="9"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btnadd"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="77dp" android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_marginTop="32dp" android:text="+" android:textSize="30dp" tools:ignore="HardcodedText,SpUsage"/>
    </LinearLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="4"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btn5"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="5"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btn6"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="6"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btnminus"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="77dp" android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_marginTop="32dp" android:text="-" android:textSize="30dp" tools:ignore="HardcodedText,SpUsage"/>
    </LinearLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="1"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btn2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:minHeight="48dp"
            android:text="2"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btn3"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="3"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btnmutiply"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="77dp" android:layout_height="wrap_content" android:layout_marginStart="16dp" android:layout_marginTop="32dp" android:text="*" android:textSize="30dp" tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>


    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btncuncel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="c"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btn0"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="0"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btndecimal"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text=","
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btndevide"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:minHeight="48dp"
            android:text="/"
            android:textSize="30dp"
            tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <Button
            android:id="@+id/btnequals"
            android:layout_width="252dp"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="="
            android:textSize="50dp"
            tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>
</LinearLayout>
