<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Style for Number Buttons (0-9, .) -->
    <style name="CalcButtonStyle">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/btn_calc_number_selector</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <!-- Operator Buttons (+, -, *, /, C) -->
    <style name="CalcButtonOperatorStyle" parent="CalcButtonStyle">
        <item name="android:background">@drawable/btn_calc_operator_selector</item>
        <item name="android:textStyle">bold</item>  <!-- Bold for emphasis -->
    </style>

    <!-- Equals Button (=) -->
    <style name="CalcButtonEqualsStyle" parent="CalcButtonStyle">
        <item name="android:background">@drawable/btn_calc_equals_selector</item>
        <item name="android:textSize">32sp</item>
    </style>

</resources>